/* pages/home/home.wxss */
.home{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.home .content{
  width: 100%;
  height: calc(100% - 50px);
  overflow-y: scroll;
}

.home .tabs_container{
  background: purple;
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 0px 10px 0px rgba(128, 128, 128, 0.384);
  z-index: 100;
}

.home .tabs_container > tab{
  height: 50px;
  width: 25%;
}