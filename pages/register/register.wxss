/* pages/register/register.wxss */
.container{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.top{
  height: 104px;
  width: 100%;
  text-align: center;
}

.logo{
  width: 193px;
  height: 84px;
  margin-top: -25px;
}

.help{
  color: #D57578;
  margin-left: 70vw;
  margin-top: 8px;
  font-size: 12px;
}

.progress_container{
  width: 100%;
  height: 35px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: -20px;
}


.bubble{
  border-radius: 50%;
  font-size: 14px;
  text-align: center;
}

.active{
  background: #D57578;
  color: white;
  width: 35px;
  height: 35px;
  line-height: 35px;
}

.inactive{
  width: 23px;
  height: 23px;
  background: transparent;
  color: #D57578;
  border: 2px dashed #D57578;
  line-height: 25px;
}

.line{
  width: 25px;
  height: 2px;
  background: #D57578;
}

.content{
  height: calc(100% - 170px);
  padding-left: 18px;
  padding-right: 18px;
  /* display: flex;
  flex-direction: column;
  overflow-y: scroll; */
}


.section_title_container{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.title_container{
  width: 100%;
  display: inline-block;
}

.title{
  color: #D57578;
  font-size: 16px;
  line-height: 16px;
  float: left;
  width: calc(100% - 40px)
}

.back{
  width: 16px;
  height: 16px;
  margin-right: 10px;
  float: left;
}

.description{
  color: #A19999;
  font-size: 14px;
  line-height: 16px;
  margin-top: 4px;
}

.form{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.section{
  display : flex;
  flex-direction : column;
  padding-bottom : 10px;
}
.tv{
  margin-top: 10px;
}

.bottom{
  height: 66px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 20px;
}

.bt{
  height: 50px;
  line-height: 50px;
  width: 100%;
  background: #D57578;
  color: white;
  font-size: 16px;
  text-align: center;
  border-radius: 25px;
}


.xinxi {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: rgba(236, 222, 222, 0.404);
}
.xinxi >textarea {
  width: 100%;
  height: 200rpx;
  padding: 4px;



   color: #2A2828;
  
  font-size: 14px;
  font-family: 'Avenir';
  font-weight: 600;
  background: rgba(236, 222, 222, 0.404);
  
}


.key{
  color: #000000;
  font-family: 'Avenir';
  font-weight: 600;
  font-size: 12px;
  margin-top: 10px;
  float: left;
}

.disclaimer{
  color: #A19999;
  font-size: 14px;
  line-height: 16px;
  width: 100%;
  padding-top: 10px;
}

.tc{
  font-size: 12px;
  color: #000000;
  line-break: strict;
  font-weight: 400;
  padding-top: 10px;
}