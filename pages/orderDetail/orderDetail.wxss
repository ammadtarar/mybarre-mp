/* pages/orderDetail/orderDetail.wxss */

.container{
  width: 100vw;
  position: relative;
}

.upper{
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  position: relative;
   display: flex;
  flex-direction: column;

}


.cont{
  display: flex;
  flex-direction: column;
  overflow-y: scroll
}

.top{
  display: flex;
  flex-direction: row;
  padding: 20px;
}

.orderIdKey{
  font-size: 12px;
  color: #A19999;
  font-weight: 500;
  height: 30px;
  line-height: 30px;
}

.orderIdVal{
   font-size: 14px;
  color: #342F2F;
  font-weight: 800;
  height: 30px;
  line-height: 30px;
  margin-left: 4px;
}

.status{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #d9bdbb;
  font-weight: 800;
  float: left;
  margin-left: auto;
}

.addressAndDeliveryCont{
  border-bottom: 0.5px solid lightgray;
  border-top: 0.5px solid lightgray;
  padding: 10px 20px 10px 20px;
  display: flex;
  flex-direction: column;
  height: auto;
}
.address_container{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.address_container:active{
  background: whitesmoke;
}

.address_icon{
  width: 20px;
  height: 20px;
}

.address_inner{
  width: calc(100% - 60px);
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.select_address{
  font-size: 12px;
  color: #a6a6a6;
  font-weight: 800;
}

.user{
  color: #545454;
  font-size: 14px;
  font-weight: bold;
}

.address{
  color: #545454;
  font-size: 12px;
  font-weight: 600;
}



.item{
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.thumb{
  width: 50px;
  height: 50px;
  border-radius: 8px;
  background: rgba(211, 211, 211, 0.534);
  margin-left: 20px;

  background-position: center;
  background-size: cover;
  overflow: hidden;
}

.itemDetails{
  width: calc(100% - 260px);
  display: flex;
  flex-direction: column;
}

.attrsContainer{
  display: flex;
  flex-direction: row;
  margin-left: 10px;
  margin-top: 5px;
}

.attr{
  padding: 2px 4px 2px 4px;
  color: black;
  border: 1px solid black;
  font-size: 8px;
  border-radius: 6px;
}

.title{
  width: 100%;
  margin-left: 10px;
  color: black;
  font-size: 12px;
  font-weight: bold;
}

.count{
  width: 40px;
  margin-left: 10px;
  text-align: right;
  color: #a6a6a6;
  font-size: 10px;
}

.price{
  width: 50px;
  margin-left: 10px;
  text-align: right;
  color: #545454;
  font-size: 14px;
  font-weight: bold;
}

.section_title{
  font-size: 12px;
  font-weight: 800;
  color: #a6a6a6;
  padding: 10px 20px 10px 20px;
  margin-top: 20px;
  margin-bottom: 10px;
}



.bottom{
  width: 100%;
  height: 100px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom .bt{
  width: calc(100% - 44px);
  height: 50px;
  background: #d9bdbb;
  color: white;
  font-weight: bold;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
  border-radius: 25px;
  box-shadow: 0px 0px 10px 0px #a6a6a6;
}