/* pages/orderDetail/orderDetail.wxss */

.cont{
  display: flex;
  flex-direction: column;
  overflow-y: scroll
}

.top{
  display: flex;
  flex-direction: row;
  padding: 20px;
}

.orderIdKey{
  font-size: 12px;
  color: #A19999;
  font-weight: 500;
  height: 30px;
  line-height: 30px;
}

.orderIdVal{
   font-size: 14px;
  color: #342F2F;
  font-weight: 800;
  height: 30px;
  line-height: 30px;
  margin-left: 4px;
}

.status{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #D57578;
  font-weight: 800;
  float: left;
  margin-left: auto;
}

.addressAndDeliveryCont{
  border-bottom: 0.5px solid lightgray;
  border-top: 0.5px solid lightgray;
  padding: 10px 20px 10px 20px;
  display: flex;
  flex-direction: column
}
.address_container{
  min-height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.address_container:active{
  background: whitesmoke;
}

.address_icon{
  width: 20px;
  height: 20px;
}

.address_inner{
  width: calc(100% - 60px);
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.select_address{
  font-size: 12px;
  color: gray;
  font-weight: 800;
}

.user{
  color: black;
  font-size: 14px;
  font-weight: bold;
}

.address{
  color: darkgray;
  font-size: 12px;
  font-weight: 600;
}



.item{
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.thumb{
  width: 50px;
  height: 50px;
  border-radius: 8px;
  background: rgba(211, 211, 211, 0.534);
  margin-left: 20px;

  background-position: center;
  background-size: cover;
  overflow: hidden;
}

.title{
  width: calc(100% - 220px);
  margin-left: 10px;
  color: black;
  font-size: 12px;
  font-weight: bold;
}

.count{
  width: 40px;
  margin-left: 10px;
  text-align: right;
  color: gray;
  font-size: 10px;
}

.price{
  width: 60px;
  margin-left: 10px;
  text-align: right;
  color: black;
  font-size: 14px;
  font-weight: bold;
}

.section_title{
  font-size: 12px;
  font-weight: 800;
  color: #776F6F;
  padding: 10px 20px 10px 20px;
  margin-top: 20px;
  margin-bottom: 10px;
}




.btPay{
  width: calc(100% - 40px);
  margin-left: 20px;
  height: 50px;
  border-radius: 25px;
  box-shadow: 0px 0px 10px 0px lightgray;
  font-size: 16px;
  color: white;
  background: #D57578;
  text-align: center;
  line-height: 50px;
  font-weight: bold;
  position: absolute;
  bottom: 10px;

}