/* pages/coursesList/coursesList.wxss */
.courses{
  width: 100cw;
  display: flex;
  flex-direction: column;
}

.notice{
  color: #A19999;
  font-family: 'Avenir';
  font-weight: 400;
  font-size: 12px;
  padding: 10px 20px 10px 20px;
  margin-bottom: 20px;
}

.courseView{
  width: calc(100% - 40px);
  margin-left: 20px;
  background: white;
  box-shadow: 0px 0px 10px 0px lightgray;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  position: relative;
  overflow: hidden;
}

.soldout_cont{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
  background: rgba(0, 0, 0, 0.136);
  display: flex;
  align-content: center;
  justify-content: center;
}

.info{
  padding: 20px;
  display: flex;
  flex-direction: column
}

.soldout{
  width: 200px;
  height: 181px;
}

.hori{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  overflow-x: hidden;
}
 
.half{
  width: 50%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.key{
  color: #A19999;
  font-family: 'Avenir';
  font-weight: 600;
  font-size: 12px;
}

.val{
  color: #2A2828;
  font-size: 14px;
  font-family: 'Avenir';
  font-weight: 600;
  height: 30px;
  line-height: 30px;
}