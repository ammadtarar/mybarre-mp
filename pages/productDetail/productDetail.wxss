/* pages/productDetail/productDetail.wxss */
.productContainer{
  width: 100vw;
  height: 100vh;
}

.product{
  width: 100%;
  height: calc(100% - 60px);
  overflow-y: scroll;
  
}

.thumb{
  width: 100vw;
  height: 100vw;
  background: lightgray
 
}
.bottom{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 20px 10px 20px;
  border-top: 0.5px solid lightgray;
  background: rgba(255, 255, 255, 0.85)
}

.price_container{
  display: flex;
  flex-direction: column;
  justify-content: center;

}

.details{
  padding: 10px;
  display: flex;
  flex-direction: column;
  padding-bottom: 20px;
}

.name{
  width: 100%;
  line-height: 18px;
  font-size: 14px;
  font-weight: 700;
  color: black;
  overflow: hidden;
  text-align: left;
}

.desc{
  width: 100%;
  line-height: 15px;
  font-size: 14px;
  font-weight: 600;
  color: gray;
  overflow: hidden;
  text-align: left;
  margin-top: 4px;
}

.attrTitle{
  font-size: 16px;
  color: black;
  font-weight: bold;
  margin-top: 10px;
  
}

.optionsContainer{
  display: inline-block;
}

.optionsContainer .option{
  float: left;
  padding: 4px 10px 4px 10px;
  border-radius: 30px;
  margin-right: 5px;
  margin-top: 5px;
}

.optionsContainer .selected{
  background: #d9bdbb;
  color: white;
  border: 1px solid #d9bdbb;
}

.optionsContainer .notSelected{
  background: transparent;
  color: gray;
  border: 1px solid gray;
}

.price_inner{
  display: flex;
  flex-direction: row;
  margin-top: 4px;
  align-items: flex-end
}

.sign{
  font-size: 12px;
  color: black;
  font-weight: bold;
  margin-right: 4px;
  margin-bottom: 2px;
}

.total{
  font-size: 10px;
  color: gray;
  font-weight: bold;
}

.total_amount{
  font-size: 18px;
  color: black;
  font-weight: bold;
}

.bt{
  width: 125px;
  height: 40px;
  background: #d9bdbb;
  margin-left: auto;
  margin-right: 40px;
  color: white;
  text-align: center;
  line-height: 40px;
  border-radius: 20px;
}