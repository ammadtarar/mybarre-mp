/* pages/uploadTrainingVideos/uploadTrainingVideos.wxss */

.uploader{
  display: flex;
  flex-direction: column
}

.top{
  display: flex;
  flex-direction: row;
  padding: 20px;
  justify-content: center;
  align-items: center;
}

.desc{
  text-align: left;
  width: calc(100% - 110px);
  color: #333333;
  font-size: 12px;
  font-weight: 600;
}

.btsCont{
  width: 100px;
  display: flex;
  flex-direction: column
}

.btSelectFies{
  width: 100px;
  height: 40px;
  font-size: 12px;
  margin-left: 10px;
  line-height: 40px;
  border: 2px solid #D57578;
  color: #D57578;
  background: transparent;
  font-weight: 600;
  border-radius: 25px;
  text-align: center;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
}

.btUpload{
  width: 104px;
  height: 40px;
  font-size: 12px;
  margin-left: 10px;
  line-height: 40px;
  background: #D57578;
  color: white;
  font-weight: 600;
  border-radius: 25px;
  text-align: center;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
  margin-top: 6px;
}

.files{
  display: flex;
  flex-direction: column;
  padding: 0px 20px 20px 20px;
}

.file{
  background: white;
  border-radius: 8px;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
  display: flex;
  flex-direction: row;
  overflow: hidden;
  margin-bottom: 20px;
}

.thumb{
  width: 100px; 
  height: 100px;
  background: lightgray;
}

.info{
  width: calc(100% - 120px);
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.name{
  width: 100%;
  font-size: 14px;
  color: black;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
  margin-bottom: 20px;
}

.bts{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.remove{
  font-size: 14px;
  color: #D57578;
  margin-right: 10px;
  font-weight: bold;
  height: 20px;
}
