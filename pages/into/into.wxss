/* pages/into/into.wxss */
.intro{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}

.bg{
  width: 300px;
  height: 3000px;
  
  overflow:hidden;


}

.bg  .background{
   height: 100%;
  min-width: 100%;
  left: 50%;
  position: relative;
  transform: translateX(-50%);
}

.overlay{
  width: 100vw;
  height: 100vh;
  background: linear-gradient(
    white,
    rgba(255, 255, 255, 0.9) , 
    rgba(255, 255, 255, 0.8) ,  
    rgba(255, 255, 255, 0.7) ,  
    rgba(255, 255, 255, 0.6) ,
    rgba(255, 255, 255, 0.5) ,
    rgba(255, 255, 255, 0.6) ,
    rgba(255, 255, 255, 0.7) ,
    rgba(255, 255, 255, 0.8) ,
    rgba(255, 255, 255, 0.9) ,
    white
    );
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo{
  margin-top: -50px; 
  width: 212px;
  height: 86px;
}


.bt{
  width: calc(100% - 60px);
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  color: #D57578;
}