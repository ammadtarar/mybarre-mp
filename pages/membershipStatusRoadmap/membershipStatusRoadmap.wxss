/* pages/membershipStatusRoadmap/membershipStatusRoadmap.wxss */

.roadmap{
  display: flex;
  flex-direction: column;
  padding: 0px 20px 0px 20px;
}

.desc{
  font-size: 12px;
  color: gray;
  font-weight: 500;
  margin-top: 10px;
  padding-bottom: 20px;
}

.statuses{
  display: flex;
  flex-direction: column;
}

.status{
  display: flex;
  flex-direction: column;
}

.status .titleCont{
  display: flex;
  flex-direction: row;
}

.status .titleCont .redBubble{
  background: #d9bdbb;
  font-size: 14px;
  color: white;
  border: 1px solid #d9bdbb;
  font-weight: 500;
  margin-right: 4px;
  width: 20px;
  height: 20px;
  border-radius: 11px;
  line-height: 21px;
  text-align: center
}

.status .titleCont .active{
  font-size: 16px;
  color: #d9bdbb;
  font-weight: 800;
  display: flex;
  flex-direction: row;
  justify-content: center
}
.status .titleCont .no{
  font-size: 14px;
  color: white;
  border: 1px solid gray;
  font-weight: 500;
  margin-right: 4px;
  width: 20px;
  height: 20px;
  border-radius: 11px;
  line-height: 21px;
  text-align: center
}

.status .titleCont .title{
  font-size: 14px;
  color: #a6a6a6;
  font-weight: 500;
}


.status .here{
  font-size: 10px;
  font-weight: bold;
  color: white;
  background: #d9bdbb;
  border: 0.5px solid #d9bdbb;
  margin-left: 8px;
  padding: 1px 2px 1px 2px;
  border-radius: 4px;
  height: 18px;
  line-height: 18px;
}

.status .detail{
  font-size: 12px;
  color: darkgray;
  font-weight: 500;
  margin-left: 10px;
  padding: 5px 0px 20px 15px;
}