/* pages/launch/launch.wxss */

.mainCont{
  width: 100vw;
  height: 100vh;  
  position: relative;
}

.bg{
  width: 100vw;
  height: 100vh;  
  position: relative;
  top: 0;
  left: 0;
  z-index: 1;
}

.cover{
  width: 100vw; 
  height: 100vh;  
  background-position: center;
  background-size: cover;
  overflow: hidden;
  background-color: rgba(211, 211, 211, 0.315);
}

.intro{
  padding: 20px;
  width: calc(100vw - 40px);
  height: calc(100vh - 40px);
  top: 0;
  left: 0;
  z-index: 2;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(white ,  rgba(255,255,255,0.9) , transparent);
}


.logo{
  width: 193px;
  height: 84px;
  margin-top: -40px;
}


.bt{
  width: calc(100% - 60px);
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  background: #D57578;
  color: white;
}

.loading{
  font-size: 12px;
  color: black;
}

.bigBt{
  width: calc(100% - 20px);
  height: auto;
  padding: 10px;
  /* background: rgba(255,255,255,0.3); */
  background: rgba(138, 90, 92, 0.307);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
  margin-top: 20px;
}

.bigBt .title{
  font-size: 16px;
  color: black;
  font-weight: bold;
  border-bottom: 1px solid black;
  padding-bottom: 10px;
}


.bigBt .desc{
  font-size: 10px;
  margin-top: 10px;
  color: black;
}