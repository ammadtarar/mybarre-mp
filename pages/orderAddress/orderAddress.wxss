/* pages/orderAddress/orderAddress.wxss */
.cont{
  display: flex;
  flex-direction: column;
  padding: 20px
}

.notice{
  font-size: 12px;
  font-weight: 600;
  color: gray;
}

.red{
  color: rgba(194, 47, 47, 0.712);
  font-weight: bold;
  margin-top: 10px;
}

.tv{
  margin-top: 10px;
}

.bottom{
  width: 100%;
  height: 100px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom .bt{
  width: calc(100% - 44px);
  height: 50px;
  background: #D57578;
  color: white;
  font-weight: bold;
  font-size: 16px;
  text-align: center;
  line-height: 50px;
  border-radius: 25px;
  box-shadow: 0px 0px 10px 0px gray;
}




