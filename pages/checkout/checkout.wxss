/* pages/checkout/checkout.wxss */
.main{
  display: flex;
  flex-direction: column;
}


.section_title{
  font-size: 12px;
  font-weight: 800;
  color: #776F6F;
  padding: 10px 20px 10px 20px;
}


.address_container{
  min-height: 40px;
  display: flex;
  flex-direction: row;
  padding: 10px 20px 10px 20px;
  border-bottom: 0.5px solid lightgray;
  border-top: 0.5px solid lightgray;
  align-items: center;
}

.address_container:active{
  background: whitesmoke;
}

.address_icon{
  width: 20px;
  height: 20px;
}

.address_inner{
  width: calc(100% - 60px);
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}

.select_address{
  font-size: 12px;
  color: gray;
  font-weight: 800;
}

.user{
  color: black;
  font-size: 14px;
  font-weight: bold;
}

.address{
  color: darkgray;
  font-size: 12px;
  font-weight: 600;
}

.item{
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.thumb{
  width: 50px;
  height: 50px;
  border-radius: 8px;
  background: rgba(211, 211, 211, 0.534);
  margin-left: 20px;

  background-position: center;
  background-size: cover;
  overflow: hidden;
}

.title{
  width: calc(100% - 220px);
  margin-left: 10px;
  color: black;
  font-size: 12px;
  font-weight: bold;
}

.count{
  width: 40px;
  margin-left: 10px;
  text-align: right;
  color: gray;
  font-size: 10px;
}

.price{
  width: 60px;
  margin-left: 10px;
  text-align: right;
  color: black;
  font-size: 14px;
  font-weight: bold;
}

.bottom{
  width: 100%;
  height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 20px 10px 20px;
  border-top: 0.5px solid lightgray;
  background: rgba(255, 255, 255, 0.85)
}

.price_container{
  display: flex;
  flex-direction: column;
  justify-content: center;

}

.price_inner{
  display: flex;
  flex-direction: row;
  margin-top: 4px;
  align-items: flex-end
}

.sign{
  font-size: 12px;
  color: black;
  font-weight: bold;
  margin-right: 4px;
  margin-bottom: 2px;
}

.total{
  font-size: 10px;
  color: gray;
  font-weight: bold;
}

.total_amount{
  font-size: 18px;
  color: black;
  font-weight: bold;
}

.bt{
  width: 100px;
  height: 40px;
  background: #D57578;
  margin-left: auto;
  margin-right: 40px;
  color: white;
  text-align: center;
  line-height: 40px;
  border-radius: 20px;
}

.remarksContainer{
  display: flex;
  flex-direction: column;
  padding: 10px;
  border-bottom: 0.5px solid lightgray;
}

.remarksContainer .title{
  font-size: 12px;
  font-weight: 800;
  color: #776F6F;
}

.remarksContainer .remarks{
  height: 70px;
  font-size: 14px;
  width: calc(100% - 40px);
  margin-right: 10px;
  margin-left: 10px;
  margin-top: 10px;
  border: 0.5px dashed lightgray;
  padding: 10px;
  margin-bottom: 10px;
  color: black
}

.remarksContainer .placeholder{
  font-size: 12px;
  color: lightgray
}