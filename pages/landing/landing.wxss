/* pages/landing/landing.wxss */
.container{
  width: 100vw;
  display: flex;
  flex-direction: column;
  background: white;
}

.cover{
  width: 100vw; 
  background-position: center;
  background-size: cover;
  overflow: hidden;
}

.card{
  width: calc(100% - 40px);
  background: white;
  border-radius: 18px;
  box-shadow: 0px 0px 6px 2px rgba(128, 128, 128, 0.5);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -100px;
  margin-left: 20px;
}

.card .welcome{
  font-size: 10px;
  color: black;
  margin-top: 16px;
}

.card .logo{
  width: 193px;
  height: 84px;
  margin-top: -20px;
  
}

.card .underline{
  width: 50px;
  height: 1px;
  background: #979797;
  margin-top: -15px;
}

.card .intro{
  font-size: 14px;
  color: #1C1C1C;
  text-align: left;
  padding: 16px;
}

.card .bt_register{
  font-size: 16px;
  color: white;
  height: 58px;
  width: 100%;
  /* color: #D57578; */
  background: #D57578;
  text-shadow: 0px 0px 10px 0px gray;
  border-radius: 0px;
  line-height: 58px;
  text-align: center;
}

.login_container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 12px;
}

.login_container .already{
  font-size: 12px;
  color: #A19999;
}

.login_container .login{
  font-size: 16px;
  color: #DDBFC0;
  margin-left: 4px;
}


.bottom{
  padding: 20px;
  display: flex;
  flex-direction: column;
}

.bottom .heading{
  font-size: 16px;
  color: #1C1C1C;
  margin-bottom: 10px;
}

.bottom .offering{
  display: inline-flex;
  margin-bottom: 4px;
}

.bottom .offering .bolt{
  width: 8px;
  height: 8px;
  margin-right: 4px;
  border-radius: 50%;
  border: 4px solid #DDBFC0;
}

.bottom .offering .text{
  width: calc(100% - 12px);
  font-size: 14px;
  color: #1C1C1C;
}