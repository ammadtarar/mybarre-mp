/* components/popup/popup.wxss */
.cover{
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 90;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.card{
  width: calc(100% - 60px);
  background: white;
  position: absolute;
  left: 50%;
  top: calc(50% - 30px);
  transform: translate(-50%, -50%);
  border-radius: 18px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.title{
  color: #545454;
  font-size: 16px;
  padding: 26px 26px 10px 26px;
  font-weight: bold;
  text-align: left;
  border-bottom: 1px solid rgba(211, 211, 211, 0.5);
  margin-bottom: 20px
}

.msg{
  margin-left: 26px;
  margin-right: 26px;
  color: #1C1C1C;
  font-size: 14px;
  
  font-weight: 300;
  text-align: left
}

.buttons_container{
  width: 100%;
  height: 60px;
  display: flex;
  flex-direction: row;
  margin-top: 26px;
  background: rgba(211, 211, 211, 0.25);
  justify-content: flex-end;
}

.bt{
  font-size: 16px;
  
  font-weight: 800;
  text-align: center;
  padding: 4px 20px 4px 20px;
  border-radius: 20px;
  margin-right: 10px;
  height: 30px;
  line-height: 30px;
  margin-top: 12px;
}

.negative{
  color: white;
  background: #a6a6a6;
}

.positive{
  color: white;
  background: #d9bdbb;
}