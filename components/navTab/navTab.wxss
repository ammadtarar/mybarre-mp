/* components/tab/tab.wxss */
.navTab{
  width: 100%;
  height: 60px;
  transition: all 0.3s;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon{
  width: 30px;
  height: 30px;
  margin-bottom: 4px;
}

.active{
  color: #D57578;
  font-weight: bold;
  font-size: 11px;
  transition: all 0.3s;
}

.inactive{
  color: #A19999;
  font-size: 11px;
  font-weight: 500;
  transition: all 0.3s;
}