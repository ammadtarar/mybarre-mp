/* components/storeItem/storeItem.wxss */
.si{
  width: 100%;
  height: 280px;
  padding-top: 5px;
}

.inner{
  width: calc(100% - 15px);
  height: calc(100% - 10px);
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  overflow: hidden;
  background: rgba(221, 191, 192, 0.40);
  box-shadow: 0px 0px 10px 0px lightgray;
}

.cover{
  width: 100%;
  height: 60%;
  background: gray;
  overflow: hidden;
}

.bottom{
  width: calc(100% - 20px);
  height: calc(40% - 10px) ;
  padding: 5px 10px 5px 10px;
  display: flex;
  flex-direction: column;
}

.desc{
  font-size: 12px;
  color: #292824;
  font-weight: 600;
  width: 100%;
  height: 44px;
  line-height: 22px;
  text-align: left;
  margin-top: 4px;
  overflow: hidden;
}

.priceContainer{
  width: 100%;
  height: 40px;
  margin-top: 10px;
}

.priceContainer .price{
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  text-align: left;
  width: auto;
  height: 40px;
  line-height: 40px;
  overflow: hidden;
  float: left;
}

.priceContainer .cart{
  width: 40px;
  height: 40px;
  border-radius: 10px;
  float: right;
  margin-top: 4px;
}