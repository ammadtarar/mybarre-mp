/* components/textview/textview.wxss */
.textview{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.textview .key{
  color: #A19999;
  font-family: 'Avenir';
  font-weight: 400;
  font-size: 12px;
}

.textview .val{
  color: #2A2828;
  font-size: 14px;
  font-family: 'Avenir';
  font-weight: 600;
  height: 30px;
  line-height: 30px;
  border-bottom: 0.5px solid #CAC8C8;
}