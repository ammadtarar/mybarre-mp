/* components/tabBar/tabBar.wxss */
.tabBar{
  width: 100%;
  height: 50px;
  border-bottom: 0.5px solid #C4BEBE;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tabBar .tab{
  color: #A19999;
  text-align: center;
  line-height: 49px;
  height: 49px;
  transition: all 0.5s;
}

.tabBar .active{
  font-size: 16px;
  font-weight: bold;
  border-bottom: 4px solid #A19999;
}

.tabBar .inactive{
  font-size: 12px;
  font-weight: 500;
}