/* components/tabBar/tabBar.wxss */
.top_tab_bar{
  width: 100%;
  height: 50px;
  border-bottom: 0.5px solid #C4BEBE;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.top_tab_bar .tab_bar{
  color: #D57578;
  text-align: center;
  line-height: 49px;
  height: 49px;
  transition: all 0.2s;
}

.top_tab_bar .active{
  font-size: 16px;
  font-weight: bold;
  border-bottom: 4px solid #D57578;
}

.top_tab_bar .inactive{
  color: #A19999;
  font-size: 12px;
  font-weight: 500;
}