view{
  width: 100%;
  height: 50px;
  text-align: center;
  line-height: 50px;
}

.active{
  background: #fff;
  color: #A19999;
  font-weight: bold;
  font-size: 14px;
}

.inactive{
  background: #EAE3E3;
  color: #A19999;
  font-size: 12px;
  box-shadow: 0px 0px 4px 0px  rgba(128, 128, 128, 0.384);
}