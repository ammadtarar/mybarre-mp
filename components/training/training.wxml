<!--components/training/training.wxml-->
<view class="cont">

  <view class="training">

  <view class="section">
    <label class="title">{{locale.videos}}</label>
    <view class="all_container" bindtap="onMore" id="vid">
        <label class="see_all">{{locale.seeAll}}</label>
        <image class="arrow" src="../../resources/icons/ic_arrow_right.png"></image>
    </view>
  </view>

  <view class="items">
    <itemCard 
        wx:for="{{videos}}"
        wx:if="{{index < 3}}"
        class="item" 
        wx:key="{{item}}" 
        type="vid" 
        thumb="{{item.thumb_url}}" 
        title="{{item.name}}" 
        url="{{item.url}}"
      />
  </view>


  <view class="section">
    <label class="title">{{locale.images}}</label>
    <view class="all_container" bindtap="onMore" id="img">
        <label class="see_all">{{locale.seeAll}}</label>
        <image class="arrow" src="../../resources/icons/ic_arrow_right.png"></image>
    </view>
  </view>

  <view class="items">
    <itemCard 
    wx:if="{{index < 3}}"
    class="item" 
    wx:for="{{images}}" 
    wx:key="{{item}}" 
    type="img" 
    thumb="{{item.url}}" 
    title="{{item.name}}" 
    url="{{item.url}}"
    />
  </view>

  <view class="section">
    <label class="title">{{locale.documents}}</label>
    <view class="all_container" bindtap="onMore" id="doc">
        <label class="see_all">{{locale.seeAll}}</label>
        <image class="arrow" src="../../resources/icons/ic_arrow_right.png"></image>
    </view>
  </view>

  <view class="items">
    <itemCard 
    wx:if="{{index < 3}}"
    class="item" 
    wx:for="{{docs}}" 
    wx:key="{{item}}" 
    type="doc" 
    mimeType="{{item.mime}}" 
    thumb="../../resources/images/ph_mybarre.png"
    title="{{item.name}}" 
    url="{{item.url}}"
    />
  </view>


</view>


</view>