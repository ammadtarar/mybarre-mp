/* components/training/training.wxss */

.cont{
  overflow-y: scroll;
  width: 100%;
  height: 100%;
}
.training{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.training .section{
  margin: 30px 20px 0px 30px;
  height: 22px;
  width: calc(100% - 60px);
  display: flex;
  justify-content: space-between;
}

.training .section .title{
  font-size: 16px;
  font-weight: bold;
  color: #a6a6a6;
  height: 22px;
  line-height: 22px;
}

.training .section .all_container{
  height: 22px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.training .section .all_container .see_all{
  color: #545454;
  font-size: 10px;
  font-weight: 500;
  height: 22px;
  line-height: 22px; 
}

.training .section .all_container .arrow{
  width: 10px;
  height: 10px;
  margin-left: 4px;
}

.training .items{
  width: calc(100% - 36px);
  height: 200px;
  padding-left: 18px;
  padding-right: 18px;
  margin-top: 10px;
  overflow-x: scroll;
  display: flex;
  flex-direction: row;
}

.training .items .item{
  padding-right: 10px;
}

