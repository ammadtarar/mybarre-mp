/* components/couponPopup/couponPopup.wxss */
.modal{
   position: absolute;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 10000;
}

.cover{
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.card{
  width: calc(100% - 60px);
  background: white;
  position: absolute;
  left: 50%;
  top: calc(50% - 30px);
  transform: translate(-50%, -50%);
  border-radius: 18px;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.title{
  color: #342F2F;
  font-size: 16px;
  margin: 26px;
  
  font-weight: 800;
}

.buttons_container{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  margin-top: 26px;
}

.bt{
  width: 50%;
  height: 100%;
  font-size: 16px;
  
  font-weight: 800;
  line-height: 50px;
  text-align: center;
}

.negative{
  color: white;
  background: #a6a6a6;
}

.positive{
  color: white;
  background: #d9bdbb;
}

.tv{
  width: calc(100% - 52px);
  margin-left: 26px;
  margin-bottom: 20px;
  margin-top: 30px;
}

.msg{
  margin-left: 26px;
  margin-right: 26px;
  color: #1C1C1C;
  font-size: 14px;
  font-weight: 300;
}

.error{
  color: red;
  font-weight: bold;
  font-size: 12px
}