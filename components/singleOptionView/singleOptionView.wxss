/* components/singleOptionView/singleOptionView.wxss */
.option_view{
  width: 100%;
  display: flex;
  flex-direction: column; 
  border-bottom: 0.5px solid #CAC8C8;
  padding-bottom: 4px;
}

.option_view .title{
  color: #A19999;
  font-family: 'Avenir';
  font-weight: 400;
  font-size: 12px;
}

.option_view .options{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}

.option_view .options .option{
  width: 50%;
}

.option_view .options .option label{
  color: #A19999;
  font-size: 14px;
  font-family: 'Avenir';
  font-weight: 600;
}
