/* components/profile/profile.wxss */
.profile{
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  text-align: center;
  overflow-y: scroll;
}

.inner{
  display: flex;
  flex-direction: column
}


.profile .top{
  width: 100%;
  margin-top: 20px;
  position: relative;
  margin-bottom: 120px;
}

.profile .top .avatar{
  width: 100px;
  height: 100px;
  background: gray;
  border-radius: 50px;
  box-shadow: 0px 0px 6px 0px rgba(174, 174, 174, 0.4);
  overflow: hidden;
  margin-left: calc(50% - 50px);
  z-index: 2;
  position: absolute;
  
}

.profile .top .card_top{
  position: relative;
  width: calc(100% - 70px);
  height: auto;
  margin-left: 15px;
  border-radius: 8px;
  background: rgba(219, 197, 198, 0.40);
  box-shadow: 0px 0px 6px 0px rgba(174, 174, 174, 0.4);
  margin-top: -50px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  padding: 20px;
  justify-content: center;
  top: 100px;
}

.profile .top .card_top .title{
  font-size: 18px;
  color: 4A4848;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  margin-top: 50px;
  margin-bottom: 10px;
}


.btCheckIn{
  width: 100%;
  height: 50px;
  background: #D57578;
  color: white;
  text-align: center;
  font-size: 16px;
  border-radius: 25px;
  margin-top: 20px;
  line-height: 50px;
  box-shadow: 0px 0px 10px 0px rgba(174, 174, 174, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: 300;
}

.btCheckIn .ic_qr{
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
.profile .notifications_card{
  width: calc(100% - 70px);
  background: rgba(219, 197, 198, 0.40);
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 40px;
  box-shadow: 0px 0px 6px 0px rgba(174, 174, 174, 0.4);
}

.profile .notifications_card .titleCont{
  text-align: left;
}

.profile .notifications_card .titleCont .title{
  font-size: 14px;
  font-weight: 600;
  text-align: left !important;
}

.vertical_spacing_small{
  margin-top: 10px;
  text-align: left !important;
}

.btCheckIn label{
  color: white;
  font-size: 13px;
  font-weight: bold;
}