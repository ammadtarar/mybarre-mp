/* components/profile/profile.wxss */
.profile{
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: white;
  align-items: center;
  text-align: center;
  overflow-y: scroll;
}

.profile .top{
  width: 100%;
  height: auto;
  margin-top: 20px;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}

.profile .top .avatar{
  width: 100px;
  height: 100px;
  background: red;
  border-radius: 50px;
  box-shadow: 0px 0px 10px 0px #AEAEAE;
  overflow: hidden;
}

.profile .top .card_top{
  width: calc(100% - 70px);
  height: auto;
  margin-left: 15px;
  border-radius: 8px;
  background: rgba(219, 197, 198, 0.40);
  box-shadow: 0px 0px 10px 0px #AEAEAE;
  margin-top: -70px;
  z-index: 1;
  display: flex;
  flex-direction: column;
  padding: 20px;
  justify-content: center;
}

.profile .top .card_top .title{
  font-size: 18px;
  color: 4A4848;
  font-weight: bold;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  margin-top: 50px;
  margin-bottom: 10px;
}

.profile .notifications_card{
  width: calc(100% - 70px);
  height: auto;
  border-radius: 8px;
  background: rgba(219, 197, 198, 0.40);
  box-shadow: 0px 0px 10px 0px #AEAEAE;
  z-index: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 30px;
  padding: 0px 20px 20px 20px;
  margin-bottom: 40px;
}

.profile .notifications_card .title{
  color: #A19999;
  font-size: 12px;
  font-weight: 600;
  text-align: left;
}