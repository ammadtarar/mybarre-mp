/* components/orders/orders.wxss */
.orders{
  width: 100vw;
  height: auto;
  padding-top: 20px;
  /* padding-bottom: 10px; */
}

.nothing{
  width: 100vw;
  height: 80vh;
  line-height: 80vh;
  font-size: 12px;
  color: gray;
  text-align: center;
}

.order{
  width: calc(100% - 40px);
  height: auto;
  margin-left: 20px;
  margin-bottom: 5px;
  background: rgba(219, 197, 198, 0.40);
  box-shadow: 0px 0px 6px 0px rgba(174, 174, 174, 0.4);
  border-radius: 8px;
}

.top{
  width: calc(100% - 20px);
  height: 30px;
  display: flex;
  flex-direction: row;
  padding: 10px;
  align-items: center
}

.top .key{
  font-size: 14px;
  color: #A19999;
  font-weight: 500;
  height: 30px;
  line-height: 30px;
}

.top .val{
  font-size: 16px;
  color: #342F2F;
  font-weight: 800;
  height: 30px;
  line-height: 30px;
  margin-left: 4px;
}

.center{
  width: 80%;
  margin-left: 10%;
  height: auto;
}

.bottom{
  width: calc(100% - 20px);
  height: 30px;
  padding: 10px;
  margin-top: 10px;
}

.bottom .status{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #D57578;
  font-weight: 800;
  float: left;
}

.bottom .price_container{
  height: 30px;
  display: flex;
  flex-direction: row;
  float: right;
  width: 100px;
  justify-content: flex-end;
  align-items: flex-end;
}

.address_icon{
  width: 10px;
  height: 10px;
  margin-left: 10px;
}

.bottom .price_container .key{
  font-size: 12px;
  color: #A19999;
  font-weight: 500;
  height: 30px;
  line-height: 30px;
}

.bottom .price_container .val{
  font-size: 14px;
  color: #342F2F;
  font-weight: 800;
  height: 30px;
  line-height: 30px;
  margin-left: 4px;
}

.btPay{
  width: 80px;
  height: 30px;
  background: #D57578;
  margin-left: auto;
  color: white;
  text-align: center;
  line-height: 30px;
  border-radius: 20px;
  font-size: 14px;
  box-shadow: 0px 0px 8px 0px gray
}

