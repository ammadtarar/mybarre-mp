/* components/orders/orders.wxss */
.orders{
  width: 100vw;
  height: auto;
  padding-top: 20px;
  /* padding-bottom: 10px; */
}

.nothing{
  width: 100vw;
  height: 80vh;
  line-height: 80vh;
  font-size: 12px;
  color: gray;
  text-align: center;
}

.order{
  width: calc(100% - 40px);
  height: auto;
  margin-left: 20px;
  margin-bottom: 5px;
  background: #d9bdbb;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
  border-radius: 8px;
}

.top{
  width: calc(100% - 20px);
  height: 30px;
  display: flex;
  flex-direction: row;
  padding: 10px;
  align-items: center;

}

.top .key{
  font-size: 14px;
  color: #a6a6a6;
  font-weight: 500;
  height: 30px;
  line-height: 30px;
}

.top .val{
  font-size: 16px;
  color: #342F2F;
  font-weight: 800;
  height: 30px;
  line-height: 30px;
  margin-left: 4px;
}

.center{
  margin-left: 20px;
  margin-right: 20px;
}

.center .item{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.center .item .product{
  font-size: 12px;
  font-weight: 600;
  color: white;
}

.center .item .price{
  font-size: 12px;
  font-weight: 600;
  color: #545454;
  margin-left: auto;
}


.address_icon{
  width: 10px;
  height: 10px;
  margin-bottom: 4px;
  margin-left: 4px;
}

.bottom{
  padding: 10px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-top: 4px solid white;
  margin: 10px;
}




.bottom  .key{
  font-size: 13px;
  color: #545454;
  font-weight: 600;
}

.bottom  .val{
  font-size: 15px;
  color: #545454;
  font-weight: 600;
  margin-left: auto
}

.btPay{
  width: 80px;
  height: 30px;
  background: #d9bdbb;
  margin-left: auto;
  color: white;
  text-align: center;
  line-height: 30px;
  border-radius: 20px;
  font-size: 14px;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
}

