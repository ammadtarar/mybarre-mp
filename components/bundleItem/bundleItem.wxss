/* components/bundleItem/bundleItem.wxss */
.bi{
  width: calc(100% - 20px);
  margin-left: 10px;
  background: rgba(221, 191, 192, 0.40);
  height: 350px;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 10px;
}

.bi .top{
  width: 100%;
  height: 66%;
  position: relative;
}

.bi .top .cover{
  position: relative;
  width: 100%;
  height: 100%;
  background: lightgray;
}

.bi .top .price{
  position: absolute;
  top: 0;
  right: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  font-weight: bold;
  padding: 4px 8px 4px 8px;
  background: rgba(221, 191, 192, 1);
  box-shadow: 0px 0px 10px 0px lightgray;
}
.bi .top .medias{
  position: absolute;
  bottom: 10px;
  right: 10px;
  height: 40px;
  width: auto;
  display: flex;
  flex-direction: row;
}


.bi .top .medias .media{
  height: 100%;
  width: 20px;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.bi .top .medias .doc{
  width: 20px;
  height: 20px;
  border: 1px solid black;
  font-size: 8px;
  line-height: 20px;
  border-radius: 4px;
}
.bi .top .medias .media image{
  width: 20px;
  height: 20px;
}

.bi .top .medias .media label{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  font-weight: 600;
  color: #292824;
}

.bi .bottom{
  width: calc(100% - 20px);
  height: calc(100% - 20px);
  padding: 10px;
  display: flex;
  flex-direction: column;
}

.bi .bottom .title{
  font-size: 14px;
  color: #292824;
  font-weight: bold;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
  text-align: left
}

.bi .bottom .desc{
  font-size: 12px;
  color: #292824;
  font-weight: 400;
  max-height: 60px;
  line-height: 20px;
  overflow: hidden;
  text-align: left
}