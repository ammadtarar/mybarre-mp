/* components/bundleItem/bundleItem.wxss */
.bi{
  width: calc(100% - 40px);
  margin-left: 20px;
  background: #d9bdbb;
  height: auto;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 20px;
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
}

.bi .top{
  width: 100%;
  height: 200px;
  position: relative;
  
}

.bi .top .cover{
  position: relative;
  width: 100%;
  height: 100%;
  background-position: center;
  background-size: cover;
  overflow: hidden;
  background-color: white
}

.bi .top .price{
  position: absolute;
  top: 0;
  right: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  font-weight: bold;
  padding: 4px 8px 4px 8px;
  background: rgba(221, 191, 192, 1);
  box-shadow: 0px 0px 10px 4px rgba(211, 211, 211, 0.489);
}


.overlay{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(#d9bdbb00 , #d9bdbb2c , #d9bdbb71 , #d9bdbbb0 , #d9bdbb);
}
.bi .top .medias{
  position: absolute;
  bottom: 0px;
  right: 0px;
  height: 40px;
  display: flex;
  flex-direction: row;

  width: calc(100% - 20px);
  justify-content: flex-end;
  padding: 0px 10px 0px 10px;
}


.bi .top .medias .media{
  height: 100%;
  width: 20px;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.bi .top .medias .doc{
  width: 20px;
  height: 20px;
  border: 1px solid black;
  font-size: 8px;
  line-height: 20px;
  border-radius: 4px;
  text-align: center
}
.bi .top .medias .media image{
  width: 20px;
  height: 20px;
}

.bi .top .medias .media label{
  width: 100%;
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  font-weight: 600;
  color: #292824;
  text-align: center
}

.bi .bottom{
  width: calc(100% - 20px);
  height: auto;
  padding: 10px;
  display: flex;
  flex-direction: column;
}

.bi .bottom .title{
  font-size: 14px;
  color: #292824;
  font-weight: bold;
  max-height: 40px;
  line-height: 20px;
  overflow: hidden;
  text-align: left
}

.bi .bottom .desc{
  font-size: 12px;
  color: #292824;
  font-weight: 400;
  max-height: 60px;
  line-height: 20px;
  overflow: hidden;
  text-align: left
}