/* components/ce/ce.wxss */

.ce{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column
}


.topTabs{
  width: 100%;
  height: 51px;
  padding-bottom: 2px;
  position:fixed;
  top: 0;
  background: white;
  z-index: 999999;
}



.ce .items{
  width: 100%;
  height: calc(100% - 50px);
  overflow: scroll;
  padding-top: 20px;
  position: relative;
  /* position:fixed; */
  top: 53px;
}


.ce .empty{
  width: 100vw;
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center
}