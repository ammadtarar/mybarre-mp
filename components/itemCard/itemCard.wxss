/* components/itemCard/itemCard.wxss */
.card{
  height: 180px;
  background: rgba(221, 191, 192, 0.40);
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 6px 0px rgba(174, 174, 174, 0.4);
  margin: 10px;
}

.card .top{
  width: 100%;
  height: 70%;
  /* background: lightgray; */
  position: relative;
  top: 0;
  left: 0;
  overflow: hidden
}
.card .top .img{
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  overflow: hidden;
  width: 100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
   /* background-position: center center;
  background-repeat: no-repeat; */
  background-position: center;
  background-size: cover;
}

.card .top .play{
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: 10px;
  right: 10px;
}

.card .top .tag{
  border: 1px solid #292824;
  padding: 2px 4px 0px 4px;
  color: #292824;
  font-size: 8px;
  font-weight: bold;
  position: absolute;
  bottom: 10px;
  right: 10px;
  height: 12px;
  line-height: 12px;
  width: auto;
}

.card .title{
  font-size: 14px;
  color: #292824;
  font-weight: bold;
  padding: 10px;
  line-height: 18px;
  max-height: 30px;
  overflow: hidden;
  text-align: left;
}

